<% provide :title, t(".title") %>
<h1><%= t "users.new.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("label.user.new.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("label.user.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("label.user.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("label.user.new.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("users.new.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
