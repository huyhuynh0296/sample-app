<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo_link"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("pages.home.title"), root_path %></li>

        <li><%= link_to t("pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to t(".account_link"), "#" class="dropdown-toggle"
            data-toggle="dropdown" %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".prof_link"), current_user %></li>
              <li><%= link_to t(".sett_link"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout_link"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login_link"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
