<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.logo_link"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("pages.home.title"), root_path %></li>
        <li><%= link_to t("pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.new.puser"), users_path %></li>
          <li><%= link_to t("layouts.header.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.prof_link"), current_user %></li>
              <li><%= link_to t("layouts.header.sett_link"), "#" %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t"layouts.header.logout_link", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.login_link"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
